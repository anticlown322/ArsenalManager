<UserControl x:Class="ArsenalManager.PresentationWPF.MVVM.Views.ArsenalManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:ArsenalManager.PresentationWPF.MVVM.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:ArsenalManagerViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="650"
             d:DesignWidth="1130">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2">
            <ComboBox ItemsSource="{Binding AvailableEntities}"
                      SelectedItem="{Binding SelectedEntityType}"
                      DisplayMemberPath="Name"
                      Width="200"
                      Margin="5"/>
            
            <Button Content="Refresh" 
                    Command="{Binding RefreshCommand}"
                    Margin="5"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" 
                      Grid.Column="0"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Margin="5,0,0,0">
            <DataGrid ItemsSource="{Binding DataView}"
                      AutoGenerateColumns="True"
                      CanUserSortColumns="True"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      SelectedItem="{Binding SelectedItem}"
                      IsReadOnly="True"
                      FontSize="14"/>
        </ScrollViewer>

        <StackPanel Grid.Row="1" 
                    Grid.Column="1" 
                    Margin="5">
            <GroupBox Header="Operations" 
                      Margin="0,0,0,10" 
                      Foreground="White"
                      FontSize="16">
                <StackPanel>
                    <Button Content="Add New" 
                            Command="{Binding AddNewCommand}"
                            Margin="0,5"
                            FontSize="14"/>
                    
                    <Button Content="Edit" 
                            Command="{Binding EditCommand}"
                            Margin="0,5"
                            FontSize="14"/>
                    
                    <Button Content="Delete" 
                            Command="{Binding DeleteCommand}"
                            Margin="0,5"
                            FontSize="14"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Custom Procedures" 
                      Foreground="White"
                      FontSize="16">
                <Button Content="Execute Procedure"
                        Command="{Binding ExecuteCustomProcedureCommand}"
                        Margin="0,5"
                        FontSize="14"/>
            </GroupBox>
        </StackPanel>

        <StatusBar Grid.Row="2" 
                   Grid.ColumnSpan="2"
                   Margin="5, 5, 0, 5">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" 
                           TextWrapping="WrapWithOverflow"
                           FontSize="14"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>